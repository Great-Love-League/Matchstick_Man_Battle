{
  "name": "matchstick-man-battle",
  "version": "0.1.0",
  "productName": "Matchstick Man Battle",
  "main": "electron-main.js",
  "author": "Great-Love-League <team@great-love-league.local>",
  "description": "Matchstick Man Battle - desktop package",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "build": {
    "appId": "com.greatlove.matchstickman",
    "productName": "Matchstick Man Battle",
    "files": [
      "**/*",
      "!node_modules/*/{test,tests,__tests__}/**",
      "!**/*.map"
    ],
    "directories": {
      "buildResources": "build"
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "mac": {
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "zip"]
    }
  }
}
